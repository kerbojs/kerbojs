{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for .kerbojsrc",
  "type": "object",
  "properties": {
    "compilerOptions": {
      "type": "object",
      "properties": {
        "outDir": {
          "description": "Specify an output folder for all emitted files.",
          "type": "string"
        }
